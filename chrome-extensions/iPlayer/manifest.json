{
	"manifest_version": 2,

	"name": "BBC iPlayer ",
	"description": "This extension help you to subscribe to the BBC programmes",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "icon.jpg",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["http://www.bbc.co.uk/iplayer/episode/*"],
			"js": ["content_script.js"]
		}
	],
	"web_accessible_resources": ["script.js"],

	"permissions": [
		"tabs", "storage", "http://*.bbc.co.uk/*"
	]
}
